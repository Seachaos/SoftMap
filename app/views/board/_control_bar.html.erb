<div id="controlBar">

	<% unless controller.action_name.to_s == 'list' then %>
		<a href="<%=url_for :action=>:list, :id=>@board.id %>" class="button" >View List</a>
	<% else %>
		<a href="<%=url_for :action=>:view, :id=>@board.id %>" class="button" >View Map</a>
	<% end %>
	
	<% if @view_only and @permissionEdit then %>
		<a jhref="<%=url_for :mode=>:edit_mode %>" class="button" >Edit Mode</a>
	<% elsif @permissionEdit %>
		<a jhref="<%=url_for :mode=>:view_only %>" class="button" >Read Mode</a>
	<% end %>
	<span id="reactNewTaskArea" ></span>

	<% if @permissionSetting then %>
		<a href="<%=url_for :action=>:setting, :id=>@board.id %>" class="button" >Setting</a>
	<% end %>
</div>